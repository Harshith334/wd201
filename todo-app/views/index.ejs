<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>To-Do Manager</title>
</head>
<body>

    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <form>
                <div class="flex gap-2 py-4">
                    <div class="flex-auto">
                        <input type="text" placeholder="What's next?" class="border border-blue-300  rounded text-blue-900  w-full p-2 text-sm " required/>
                    </div>
                    <div class="flex-auto">
                        <input type="date"  class="border border-blue-300  rounded text-blue-900  w-full p-2 text-sm leading-4"/>
                    </div>
                    <div class="flex-none">
                        <button type="submit" class="bg-orange-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb">Add</button>
                    </div>
                </div>
            </form>

            <div>
                <h5>Overdue (<span id="overdueCount">0</span>)</h5>
                <ul id="overdueList" class="list-none">
                    <li class="Todo-Item">
                        <div class="flex items-center w-fit my-2 px-2 py-1  rounded hover:bg-purple-600">
                            <input  id="todo-checkbox-1" type="checkbox" class="w-4 h-4 text-green-600 bg-yellow-100 rounded border">
                            <label for="todo-checkbox-1" class=" ml-2 text-sm text-green-600 cursor-pointer">Have to pay electricity bill</label>
                            <a href="#" class=" hidden  trash-icon ml-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg>
                            </a>
                        </div>
                    </li>
                   
                </ul>

                <h5>Due Today (<span id="dueTodayCount">0</span>)</h5>
                <ul id="dueTodayList" class="list-none">
                    <li class="Todo-Item">
                        <div class="flex items-center w-fit my-2 px-2 py-1  rounded hover:bg-purple-600">
                            <input  id="todo-checkbox-2" type="checkbox" class="w-4 h-4 text-green-600 bg-yellow-100 rounded border">
                            <label for="todo-checkbox-2" class=" ml-2 text-sm text-green-600 cursor-pointer">Have to recharge bill</label>
                            <a href="#" class=" hidden  trash-icon ml-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg>
                            </a>
                        </div>
                    </li>
                   
                </ul>

                <h5>Due Later (<span id="dueLaterCount">0</span>)</h5>
                <ul id="dueLaterList" class="list-none">
                    <li class="Todo-Item">
                        <div class="flex items-center w-fit my-2 px-2 py-1  rounded hover:bg-purple-600">
                            <input  id="todo-checkbox-3" type="checkbox" class="w-4 h-4 text-green-600 bg-yellow-100 rounded border">
                            <label for="todo-checkbox-3" class=" ml-2 text-sm text-green-600 cursor-pointer">Wifi recharge</label>
                            <a href="#" class=" hidden  trash-icon ml-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Sample data representing todos
            const todos = [
                { id: 1, title: 'Have to pay electricity bill', dueDate: '2024-01-22', status: 'overdue' },
                { id: 2, title: 'Recharge mobile', dueDate: '2024-01-22', status: 'overdue' },
                // Add more todos as needed
            ];
            function renderTodos() {
                const overdueList = document.getElementById('overdueList');
                const dueTodayList = document.getElementById('dueTodayList');
                const dueLaterList = document.getElementById('dueLaterList');
                overdueList.innerHTML = '';
                dueTodayList.innerHTML = '';
                dueLaterList.innerHTML = '';
                todos.forEach(todo => {
                    const listItem = document.createElement('li');

                    const checkbox = document.createElement('input');
                    checkbox.type = 'checkbox';
                    checkbox.id = `todo-checkbox-${todo.id}`;
                    checkbox.classList.add('w-4', 'h-4', 'text-green-600', 'bg-yellow-100', 'rounded', 'border');
                    const label = document.createElement('label');
                    label.htmlFor = `todo-checkbox-${todo.id}`;
                    label.classList.add('ml-2', 'text-sm', 'text-green-600', 'cursor-pointer');
                    label.textContent = todo.title;

                    listItem.appendChild(checkbox);
                    listItem.appendChild(label);

\
                    switch (todo.status) {
                        case 'overdue':
                            overdueList.appendChild(listItem);
                            break;
                        case 'dueToday':
                            dueTodayList.appendChild(listItem);
                            break;
                        case 'dueLater':
                            dueLaterList.appendChild(listItem);
                            break;
                        default:
                            break;
                    }
                });

                document.getElementById('overdueCount').textContent = overdueList.children.length;
                document.getElementById('dueTodayCount').textContent = dueTodayList.children.length;
                document.getElementById('dueLaterCount').textContent = dueLaterList.children.length;
            }

            renderTodos();
        });
    </script>

    <table>
        <% for( var i =0; i < allTodos.length; i++){ %>
        <tr>
            <td>
                <%= allTodos[i].title %>
            </td>
        </tr>
        <% } %>
    </table>
    <%- include("footer.ejs") %>

</body>
</html>
