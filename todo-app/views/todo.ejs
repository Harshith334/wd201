<div class="flex items-center">
    <h5>
      <%= title %>
    </h5>
    <span id="<%= id %>" class="h-6 w-7 bg-gray-300 ml-2 mt-1 rounded text-sm text-center w-fit"><%= Due.length %></span>
  </div>
  <ul class="list-none">
    <% for( var i=0; i < todo.dataValue.length; i++) { %>
      <li class="Todo-Item">
        <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-200">
          <input id="todo-checkbox-<%=Due[i].id %>" type="checkbox" onclick="updateTodo('<%= todo.dataValues.id %>')"
            class="w-4 h-4 text-blue-600 bg-green-100 rounded border-gray-300" />
          <label for="todo-checkbox-<%=Due[i].id %>"  class="ml-2 text-sm text-gray-600 cursor-pointer"> <%= todo.dataValues.title%> </label>
          <a href="#" class=" hidden trash-icon ml-2" onclick="deleteTodo" >

            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
              </svg>
            
          </a>
        </div>
      </li>
    <% } %>
  </ul>
